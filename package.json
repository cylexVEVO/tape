{
  "name": "tape-audio",
  "version": "0.1.3-beta2",
  "license": "GPL-3.0-only",
  "main": "main/index.js",
  "productName": "Tape Audio",
  "scripts": {
    "clean": "rimraf dist main renderer/out renderer/.next",
    "dev": "npm run build-electron && electron .",
    "build-renderer": "yarn next build renderer && yarn next export renderer",
    "build-electron": "tsc -p electron-src",
    "build": "npm run build-renderer && npm run build-electron",
    "pack-app": "npm run build && electron-builder --dir",
    "dist-all": "npm run build && electron-builder -mwl",
    "dist-mac": "npm run build && electron-builder -m",
    "type-check": "tsc"
  },
  "dependencies": {
    "@electron/remote": "1.1.0",
    "@reduxjs/toolkit": "1.5.1",
    "@tailwindcss/jit": "^0.1.18",
    "autoprefixer": "10.2.5",
    "electron-is-dev": "2.0.0",
    "electron-next": "^3.1.5",
    "music-metadata": "7.8.3",
    "next-fonts": "^1.5.1",
    "next-images": "^1.7.0",
    "postcss": "8.2.9",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "7.2.3",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "styled-components": "5.2.3",
    "tailwindcss": "2.1.1"
  },
  "devDependencies": {
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@types/react-redux": "^7.1.16",
    "@types/react-table": "7.0.29",
    "@types/styled-components": "5.1.9",
    "electron": "^10.1.5",
    "electron-builder": "22.10.5",
    "next": "latest",
    "rimraf": "^3.0.0",
    "typescript": "4.2.3"
  },
  "build": {
    "asar": true,
    "files": [
      "main",
      "renderer/out"
    ],
    "icon": "./assets/icon.png",
    "dmg": {
      "background": "./assets/dmg.png",
      "contents": [
        {
          "x": 90,
          "y": 230,
          "name": "Tape Audio.app"
        },
        {
          "x": 440,
          "y": 230,
          "path": "/Applications",
          "type": "link"
        }
      ]
    }
  }
}
